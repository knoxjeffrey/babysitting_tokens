- body_class "sidebar-collapse"
- content_wrapper_class "welcome"
= render 'shared/errors', controller_object: @user if @user
.jumbotron-altered         
  %section.reset_password.container
    .row
      .col-sm-10.col-sm-offset-1
        = bootstrap_form_tag url: password_resets_path do
          %header
            %h2 Reset Your Password
            %br
          .form-group
            = label_tag :password, "New Password"
            .row
              .col-sm-4
                = password_field_tag :password, nil, class: 'form-control'
                = hidden_field_tag :password_token, @password_token
          .form-group.action
            %input(type="submit" value="Reset Password" class="btn bg-olive btn-flat btn-lg")