.home-body
  .row
    .col-lg-12
      %h1 Request To Join #{@request_to_join_group.group.group_name.capitalize}
      %br
.row
  .col-lg-4
    .media
      %a{class: "pull-left", href: ""}
        = image_tag(avatar_url(@request_to_join_group.requester.email, 100), class: "media-object dp img-circle", width: "100", height: "100")
      .media-body
        %h4{ class: "media-name" } #{ @request_to_join_group.requester.full_name }
        
  .col-lg-5.col-lg-offset-1
    .request-detail
      .panel.panel-primary
        .panel-heading
          %h3{ class: 'panel-title' } Requester Information
        .panel-body
          %table{ class: "table table-striped table-hover" }
            %thead
              %tr
                %th Name
                %th Email
            %tbody
              %tr
                %td #{ @request_to_join_group.requester.full_name }
                %td #{ @request_to_join_group.requester.email }
                %td= link_to "Accept Request", "/user_groups?request_id=#{@request_to_join_group.id}", method: :post , class: "btn btn-success btn-xs"