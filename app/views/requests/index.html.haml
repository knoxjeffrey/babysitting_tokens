.home-body   
  %ul{ class: "nav nav-pills pull-right" }
    %li{ class: "active" }
      %a{ href: "" }
        %span Tokens
        %span{ class: "badge" }20
.row
  .col-lg-5
    .media
      %a{class: "pull-left", href: ""}
        = image_tag("user-placeholder.png", class: "media-object dp img-circle", width: "100", height: "100")
      .media-body
        %h4{ class: "media-name" } #{ current_user.full_name }
        
.home-body       
  .row
    .col-lg-5
      %a{ href: my_request_path, class: "freedom-button btn btn-success btn-lg btn-block" }Pick Your Next Day Of Freedom
     
  .row
    .col-lg-5
      .user_nights
        .panel.panel-primary
          .panel-heading
            %h3{ class: 'panel-title' } Your Nights Of Freedom
          .panel-body
            %table{ class: "table table-striped table-hover" }
              %thead
                %tr
                  %th Date
                  %th Status
              %tbody
                - @user_requests.each do |user_request|
                  %tr{ class: row_color(user_request.status) }
                    %td= display_friendly_date(user_request.start)
                    %td= user_request.status
                
    .col-lg-6.col-lg-offset-1
      .other_nights
        .panel.panel-primary
          .panel-heading
            %h3{ class: 'panel-title' } Requests For Freedom
          .panel-body
            %table{ class: "table table-striped table-hover" }
              %thead
                %tr
                  %th Name
                  %th Date
              %tbody
                - @friend_requests.each do |friend_request|
                  %tr
                    %td= friend_request.user.full_name
                    %td= display_friendly_date(friend_request.start)
                    %td
                      %a{ href: request_path(friend_request), class: "btn btn-success btn-xs" }Open