= render 'shared/profile'
        
.home-body       
  .row
    .col-lg-3
      -if current_user.groups.present?
        =link_to 'Request For Freedom', my_request_path, class: "freedom-button btn btn-success btn-md btn-block"
  
  .row
    %br
    - if @next_babysitting_info.present?
      .col-lg-12
        .alert.alert-dismissible.alert-danger
          You next have to babysit on:
          = display_next_baby_sitting_date_info(@next_babysitting_info)
          =link_to 'See All Dates', my_babysitting_dates_path, class: "btn btn-success btn-xs pull-right"
          
  .row
    .col-lg-4
      .user_nights
        .panel.panel-primary
          .panel-heading
            %h3{ class: 'panel-title' } Your Nights Of Freedom
          .panel-body
            %table{ class: "table table-striped table-hover" }
              %span.label.label-success accepted
              %span.label.label-warning.label-status waiting
              %thead
                %tr
                  %th Date
                  %th Babysitter
                  %th
                  %th
              %tbody
                - @user_requests.each do |user_request|
                  %tr{ class: row_color(user_request.status) }
                    %td= display_friendly_date(user_request.start)
                    %td= user_request.babysitter_name
                    - if user_request.status == 'waiting'
                      %td
                        =link_to 'Edit', edit_my_request_path(user_request), class: "btn btn-success btn-xs"
                    - else
                      %td
                    %td
                      =link_to 'Delete', request_path(user_request), method: 'delete', class: "btn btn-danger btn-xs"
                
    .col-lg-5
      .other_nights
        .panel.panel-primary
          .panel-heading
            %h3{ class: 'panel-title' } Requests For Freedom
          .panel-body
            %table{ class: "table table-striped table-hover" }
              %thead
                %tr
                  %th Name
                  %th Circle
                  %th Date
              %tbody
                - @friend_request_groups.each do |request_group|
                  %tr
                    %td= request_group.request.full_name
                    %td= request_group.group.group_name
                    %td= display_friendly_date(request_group.request.start)
                    %td
                      =link_to 'Open', request_group_path(request_group), class: "btn btn-success btn-xs"
                      
    .col-lg-3
      .user_circles
        .panel.panel-primary
          .panel-heading
            %h3{ class: 'panel-title' } Babysitting Groups
          .panel-body
            %table{ class: "table table-striped table-hover" }
              %thead
                %tr
                  %th Name
                  %th Your Tokens
              %tbody
                - @user_groups.each do |user_group|
                  %tr
                    %td= user_group.group.group_name
                    %td= user_group.tokens
                    %td
                      =link_to 'Details', group_path(user_group.group), class: "btn btn-success btn-xs"
            =link_to 'Create New Group', new_group_path, class: "btn btn-success btn-xs"