.home-body   
  %ul{ class: "nav nav-pills pull-right" }
    - current_user.user_groups.each do |user_group|
      %li{ class: "active" }
        %a{ href: "" }  
          %span #{ user_group.group.group_name }
          %span{ class: "badge" } #{ user_group.tokens }
        
= render 'shared/profile'
    
.home-body       
  %section.register.container
    .row
      .col-sm-6.col-sm-offset-1
        = bootstrap_form_for @request, url: my_request_path do |f|
          %header
            %h1 Your Day Of Freedom
          %br
          = f.alert_message "Please fix the errors below."
          = f.text_field :start, { data: { date_format: 'DD/MM/YYYY HH:mm' }, id: 'datetimepicker1' }
          = f.text_field :finish, { data: { date_format: 'DD/MM/YYYY HH:mm' }, id: 'datetimepicker2' }
          - if current_user.groups.count > 1
            = f.collection_check_boxes :group_ids, current_user.groups, :id, :group_name, label: 'Request To Group'
          = f.submit "Freedom", class: "btn btn-success"
      :javascript
        $(function () {
          $('#datetimepicker1').datetimepicker();
          $('#datetimepicker2').datetimepicker();
        });