.home-body
  %h1 Request For Freedom
  %br
.row
  .col-lg-4
    .media
      %a{class: "pull-left", href: "#"}
        = image_tag("user-placeholder.png", class: "media-object dp img-circle", width: "100", height: "100")
      .media-body
        %h4{ class: "media-name" } #{ @request.user.full_name }
        
  .col-lg-5.col-lg-offset-1
    .request-detail
      .panel.panel-primary
        .panel-heading
          %h3{ class: 'panel-title' } Request For Freedom
        .panel-body
          %table{ class: "table table-striped table-hover" }
            %thead
              %tr
                %th Date
                %th Start
                %th End
                %th Tokens
            %tbody
              %tr
                %td #{ display_friendly_date(@request.start) }
                %td #{ display_time(@request.start) }
                %td #{ display_time(@request.finish) }
                %td 4
  
  .col-lg-2              
    %a{ href: "#", class: "accept btn btn-success btn-lg" }Accept