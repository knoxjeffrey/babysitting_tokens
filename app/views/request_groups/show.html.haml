= render 'shared/tokens'
         
.home-body
  .row
    .col-lg-12
      %h1 Request For Freedom
      %br
.row
  .col-lg-4
    .media
      %a{class: "pull-left", href: ""}
        = image_tag(avatar_url(@request_group.request.user.email, 100), class: "media-object dp img-circle", width: "100", height: "100")
      .media-body
        %h4{ class: "media-name" } #{ @request_group.request.user.full_name }
        
  .col-lg-5.col-lg-offset-1
    .request-detail
      .panel.panel-primary
        .panel-heading
          %h3{ class: 'panel-title' } Request For Freedom
        .panel-body
          %table{ class: "table table-striped table-hover" }
            %thead
              %tr
                %th Date
                %th Start
                %th End
                %th Circle
                %th Earn Tokens
            %tbody
              %tr
                %td #{ display_friendly_date(@request_group.request.start) }
                %td #{ display_time(@request_group.request.start) }
                %td #{ display_time(@request_group.request.finish) }
                %td #{ @request_group.group.group_name }
                %td #{ @request_group.tokens_for_babysitter }
  
  .col-lg-2              
    = button_to "Accept", {controller: :request_groups, action: :update}, {:method => :put, class: "accept btn btn-success btn-lg" }