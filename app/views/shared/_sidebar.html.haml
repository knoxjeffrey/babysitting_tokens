- if logged_in?
  .main-sidebar
    / Inner sidebar
    .sidebar
      / user panel (Optional)
      .user-panel
        .pull-left.image
          %img.img-circle{:alt => "User Image", :src => avatar_url(current_user.email, 100)}/
        .pull-left.info
          %p #{current_user.full_name} 
          %a{:href => "#"}
            %i.fa.fa-circle.text-success
            Logged In
      / /.user-panel
      / Search Form
      = form_tag search_users_path, method: 'get', class: "sidebar-form" do
        .input-group
          = text_field_tag :full_name, nil, class: "form-control", placeholder: "Search for friends..."
          %span.input-group-btn
            = button_tag type: 'submit', class: "btn btn-flat", id: "search-btn" do
              %i.fa.fa-search
      / /.sidebar-form
      / Sidebar menu
      %ul.sidebar-menu
        %li.header
        %li
          -if current_user.groups.present?
            =link_to my_request_path, class: "freedom-button btn bg-olive btn-flat" do
              %i.fa.fa-plus-circle
              I Need A Sitter!
        / Circles
        %li.header CIRCLES
        - current_user.user_groups.each do |user_group|
          %li
            =link_to group_path(user_group.group) do
              %i.fa.icon-coins.text-warning
              #{user_group.group.group_name}
              %small.label.pull-right.bg-yellow{"data-toggle" => "tooltip", :title => "You have #{user_group.tokens} tokens"}
                = user_group.tokens
        %li
          -if current_user.groups.present?
            =link_to new_group_path, class: "btn bg-olive btn-flat" do
              %i.fa.fa-plus-circle
              Create New Circle
          -elsif current_page?(home_path)
            =link_to new_group_path, { class: "btn bg-olive btn-flat animated tada", "data-toggle" => "tooltip", :title => "Create a circle before making requests" } do
              %i.fa.fa-plus-circle
              Create New Circle
          -else
            =link_to new_group_path, { class: "btn bg-olive btn-flat", "data-toggle" => "tooltip", :title => "Create a circle before making requests" } do
              %i.fa.fa-plus-circle
              Create New Circle
        / Facebook
        %li.header SHARE
        %li
          %a.btn.btn-block.btn-social.btn-facebook.btn-flat.bg-blue{:target => "_blank", :href => "https://www.facebook.com/dialog/feed?app_id=1426080944375097&link=http://www.timeofftokens.com&picture=http://res.cloudinary.com/da6v0vrqx/image/upload/landing_logo.jpg&name=Are%20you%20a%20parent%20and%20need%20some%20time%20off%3F&description=Time%20Off%20Tokens%20is%20an%20easy%20way%20to%20to%20setup%20a%20babysitting%20circle%2ESign%20up%20for%20free%20today%21&redirect_uri=http://www.timeofftokens.com" }
            %i.fa.fa-facebook
            Tell Your Friends!