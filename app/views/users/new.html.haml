%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, url: register_path do |f|
        %header
          %h1 Register
        %br
        = f.email_field :email
        = f.password_field :password
        = f.text_field :full_name
        = hidden_field_tag :group_invitation_identifier, @group_invitation_identifier
        = f.submit "Sign Up", class: "btn btn-success"