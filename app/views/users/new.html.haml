%body.welcome
  .jumbotron.opacity
    .row
      .col-sm-7.col-sm-offset-1
        %header
          %h2 Register
        %br
        = link_to "#{root_url}auth/facebook?from=registration&invite=#{@group_invitation_identifier}", class: "btn btn-block btn-social btn-facebook" do
          %i.fa.fa-facebook 
          Sign Up Through Facebook
        %hr
        = bootstrap_form_for @user, url: register_path do |f|
          = f.email_field :email
          = f.password_field :password
          = f.text_field :full_name
          = hidden_field_tag :group_invitation_identifier, @group_invitation_identifier
          = f.submit "Sign Up", class: "btn btn-success"