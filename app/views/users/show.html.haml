.home-body
  .row
    .col-lg-12
      %h1 Groups for #{ @user.full_name }
      %br
.row
  .col-lg-4
    .media
      %a{class: "pull-left", href: ""}
        = image_tag(avatar_url(@user.email, 100), class: "media-object dp img-circle", width: "100", height: "100")
      .media-body
        %h4{ class: "media-name" } #{ @user.full_name }
        
  .col-lg-5.col-lg-offset-1
    .request-detail
      .panel.panel-primary
        .panel-heading
          %h3{ class: 'panel-title' } Group Information
        .panel-body
          %table{ class: "table table-striped table-hover" }
            %thead
              %tr
                %th Group Name
                %th Group Location
            %tbody
              - @user.groups.each do |group|
                %tr
                  %td #{ group.group_name }
                  %td #{ group.location }