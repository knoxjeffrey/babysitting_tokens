= render 'shared/tokens'
        
= render 'shared/profile'
    
.home-body       
  %section.register.container
    .row
      .col-lg-7.col-lg-offset-1
        %header
          %h1 Search Results
    - if @search_results.any?
      .row
        .col-lg-6.col-lg-offset-1
          .other_nights
            .panel.panel-primary
              .panel-heading
                %h3{ class: 'panel-title' } Users
              .panel-body
                %table{ class: "table table-striped table-hover" }
                  %thead
                    %tr
                      %th
                      %th Name
                  %tbody
                    - @search_results.each do |user|
                      %tr
                        %td
                          = image_tag(avatar_url(user.email, 45), class: "media-object dp img-circle", width: "45", height: "45")
                        %td= user.full_name
                        %td
                          =link_to 'Groups', user_path(user), class: "btn btn-success btn-xs"
    - else
      .row
        .col-lg-6.col-lg-offset-1
          .other_nights
            .panel.panel-primary
              .panel-heading
                %h3{ class: 'panel-title' } Users
              .panel-body
                %table{ class: "table table-striped table-hover" }
                  %thead
                    %td
                      %p.lead.text-muted No results found for #{params[:full_name]}