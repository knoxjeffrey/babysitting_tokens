%section.sign_in.container
  .row
    .col-sm-7.col-sm-offset-1
      %header
        %h1 Sign In
      %br
      = link_to 'auth/facebook', class: "btn btn-block btn-social btn-facebook" do
        %i.fa.fa-facebook 
        Sign In With Facebook
      %hr
      = bootstrap_form_tag url: '/sign_in' do |f|
        = f.email_field :email
        = f.password_field :password
        = f.submit "Sign In", class: "btn btn-success"
        = link_to "Forgot Password", forgot_password_path, class: "btn btn-default"